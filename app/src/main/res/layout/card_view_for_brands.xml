<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/brandImageCardView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:src="@drawable/abc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/subscribedBtnCardView"
            android:text="Foodcity"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/tw__composer_black"/>

        <Button
            android:id="@+id/subscribedBtnCardView"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/viewOdderBtnCardView"
            android:layout_marginEnd="160dp"
            android:background="#f2170c"
            android:clickable="true"
            android:text="Subscribe"
            android:textColor="@color/tw__composer_white"
            android:textSize="10dp" />

        <Button
            android:id="@+id/viewOdderBtnCardView"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="45dp"
            android:background="#4490e1"
            android:clickable="true"
            android:text="View Offer"
            android:textColor="@color/tw__composer_white"
            android:textSize="10dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>